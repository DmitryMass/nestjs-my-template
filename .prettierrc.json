{
  "plugins": [
      "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^./(.*)$",
      "^../(.*)$",
      "@routes/",
      "@middleware/",
      "@admin/",
      "@client/",
      "@utils/",
      "@types/",
      "^@nestjs/(.*)$", "^[./]"
  ],
  "printWidth": 80,
  "trailingComma": "all",
  "importOrderSeparation":true,
  "importOrderSortSpecifiers":true,
  "importOrderParserPlugins":  ["typescript", "classProperties", "decorators-legacy"],
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true
}